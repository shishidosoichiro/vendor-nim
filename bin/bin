#!/usr/bin/env sh

# Exit, if return non-zero or use an undefined variable.
set -eu

# Restore the current directory, if exit.
pwd="$PWD"
trap "cd \"$pwd\"" EXIT

# cd workdir
scriptfile="$(realpath "$0")"
bin="$(dirname "$scriptfile")"
workdir="$(dirname "$bin")"
cd "$workdir"

# Variables
VERSION=${1:-0.19.2}

# Start
home="$(./bin/home $VERSION)"

# Path
echo "$home/bin"
